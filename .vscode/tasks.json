{
    "version": "2.0.0",
    "label": "Build SDL2 Project",
    "type": "shell",
    "command": "g++",
    "args": [
        "-g",
        "main.cpp",
        "-o",
        "MCLsim",
        "-I/usr/include/SDL2",
        "-D_REENTRANT",
        "-L/usr/lib",
        "-lSDL2"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "problemMatcher": [
        "$gcc"
    ],
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file hello",
            "command": "g++",
            "args": [
                    "-g",
                    "main.cpp",
                    "-o",
                    "MCLsim",
                    "-I/usr/include/SDL2",
                    "-D_REENTRANT",
                    "-L/usr/lib",
                    "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}